{
	"name": "sapphire-bot",
	"version": "2.0.0",
	"packageManager": "yarn@3.7.0",
	"private": true,
	"license": "MIT",
	"main": "dist/Bot.js",
	"imports": {
		"#root/*": "./dist/*.js",
		"#lib/*": "./dist/lib/*.js"
	},
	"type": "module",
	"scripts": {
		"start": "node dist/Bot.js --enable-source-maps",
		"build": "tsc -b src",
		"watch": "yarn tsc-watch -b src --onSuccess \"yarn start\"",
		"format": "prettier --write --loglevel=warn \"src/**/*.{js,ts,json}\"",
		"postinstall": "husky install .github/husky"
	},
	"dependencies": {
		"@skyra/env-utilities": "^1.2.0",
		"@skyra/http-framework": "^1.0.0",
		"@skyra/logger": "^2.0.0",
		"colorette": "^2.0.19",
		"discord.js": "^14.9.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.0.0",
		"@commitlint/config-conventional": "^19.0.0",
		"@sapphire/prettier-config": "^1.4.5",
		"@sapphire/ts-config": "^4.0.0",
		"@types/node": "^18.15.11",
		"discord-api-types": "0.37.63",
		"husky": "^8.0.3",
		"prettier": "^3.0.0",
		"pretty-quick": "^3.1.3",
		"tsc-watch": "^6.0.0",
		"typescript": "^5.0.4"
	},
	"engines": {
		"node": ">=18.x.x"
	},
	"prettier": "@sapphire/prettier-config",
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	}
}
